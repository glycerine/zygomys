// testing recursion
(defn fact [n]
  (cond (== n 0) 1 (* n (fact (- n 1)))))

(assert (== 120 (fact 5)))
(assert (== 3628800 (fact 10)))

(defn sum [l]
  (cond (empty? l)
    0 (+ (first l) (sum (rest l)))))

(assert (== 0 (sum [])))
(assert (== 6 (sum [1 2 3])))

// testing tail recursion
(defn factTc [n accum]
  (cond (== n 0) accum
    (let [newn (- n 1)
          newaccum (* accum n)]
      (factTc newn newaccum))))

(assert (== 120 (factTc 5 1)))
(assert (== 3628800 (factTc 10 1)))

(defn sumTc [l a]
  (cond (empty? l)
    a (sumTc (rest l) (+ a (first l)))))

(assert (== 0 (sumTc [] 0)))
(assert (== 6 (sumTc [1 2 3] 0)))

